                                </li>
                                <li>
                                    <i class="far fa-clock"></i> Available on Fri, 22 Mar
                                </li>
                            </ul>
                            <div class="row row-sm">
                                <div class="col-6">
                                    <a href="doctor-profile.html" class="btn view-btn">View Profile</a>
                                </div>
                                <div class="col-6">
                                    <a asp-controller="Appointment" asp-action="Booking" 
                                       asp-route-doctor="@doctor.AccountId" asp-route-Id="@doctor.Id" asp-route-date="@DateTime.Now.ToString("yyyy-MM-dd")" 
                                       asp-route-doctorName="@doctor.FullName" class="btn book-btn">Book Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    }

                    <!-- /Doctor Widget -->
