@using Contract.DTOs.AuthService;
@model ChangePasswordDto
@{
    Layout = "_LayoutManagement";
    ViewData["Title"] = "Change Password";
    var success = ViewBag.Success;
}
<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12 col-lg-6">

                    <!-- Change Password Form -->
                    <form asp-route="ChangePassword" method="post">
                        <div class="form-group">
                            <label>Old Password</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control" required>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <input asp-for="NewPassword" type="password" class="form-control" required>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" required>
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                        <div class="submit-section">
                            <button type="submit" class="btn btn-primary submit-btn" id="btnSave">Save Changes</button>
                        </div>
                    </form>
                    <!-- /Change Password Form -->

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var state = "@success";
            if (state == "Successfully!") {
                swal({
                    title: "Successfully!",
                    icon: "success",
                    text: "Change password successfully!",
                    type: "success",
                    showCloseButton: "Close"
                }).then((value) => {
                    state = "";
                });
            }
    });
    </script>
}