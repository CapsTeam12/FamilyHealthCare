@{
    ViewData["Title"] = "Booking";
    var doctorName = ViewBag.doctorName;
    DateTime StartTime = ViewBag.StartTime;
    DateTime EndTime = ViewBag.EndTime;
    DateTime date = ViewBag.Date;
}
<!-- Page Content -->
<div class="content success-page-cont">
    <div class="container-fluid">

        <div class="row justify-content-center">
            <div class="col-lg-6">

                <!-- Success Card -->
                <div class="card success-card">
                    <div class="card-body">
                        <div class="success-cont">
                            <i class="fas fa-check"></i>
                            <h3>Appointment booked Successfully!</h3>
                            <p>Appointment booked with <strong>Dr. @doctorName</strong><br> on <strong>@date.ToLongDateString() @StartTime.ToString("HH:mm") to @EndTime.ToString("HH:mm")</strong></p>
                        </div>
                    </div>
                </div>
                <!-- /Success Card -->

            </div>
        </div>

    </div>
</div>	