@model IEnumerable<Contract.DTOs.AppointmentDetailsDto>
@using Data
@{
    ViewData["Title"] = "Appointments";
    Layout = "_LayoutManagement";
    var getNameOfUser = User.Identity.Name;
    var userId = ViewBag.UserId;
}
<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="appointments">
        @if (Model != null)
        {
            <!-- Appointment List -->
            foreach (var ap in Model)
            {
                <div class="appointment-list">
                    <div class="profile-info-widget">
                        <a class="booking-doc-img">
                            <img src="~/assets/img/patients/patient.jpg" alt="User Image">
                        </a>
                        <div class="profile-det-info">
                            <h3>@ap.Therapist.FullName</h3>
                            <div class="patient-details">
                                <h5><i class="far fa-clock"></i> @ap.StartTime.ToLocalTime()</h5>
                                <h5><i class="fas fa-map-marker-alt"></i> @ap.Therapist.Address</h5>
                                <h5><i class="fas fa-envelope"></i> richard@example.com</h5>
                                <h5 class="mb-0"><i class="fas fa-phone"></i> @ap.Therapist.Phone</h5>
                            </div>
                        </div>
                    </div>
                    <div class="appointment-action">
                        <a href="#" class="btn btn-sm bg-info-light" data-bs-toggle="modal" data-bs-target="#appt_details">
                            <i class="far fa-eye"></i> View
                        </a>
                        <a href="#" class="btn btn-sm bg-success-light" data-bs-toggle="modal" data-bs-target="#add_medical_records">
                            <i class="fas fa-edit"></i> Reschedule
                        </a>
                        <a class="btn btn-sm bg-danger-light" data-bs-toggle="modal" href="#delete_modal">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            }
            <!-- /Appointment List -->
        }

    </div>
</div>
<!-- /Page Content-->
