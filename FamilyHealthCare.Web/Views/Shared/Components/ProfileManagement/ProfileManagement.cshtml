@using Contract.DTOs.ManagementService
@using FamilyHealthCare.SharedLibrary
@model PatientDetailsDto
@{
}

<!-- Profile Sidebar -->
    <div class="profile-sidebar">
        <div class="widget-profile pro-widget-content">
            <div class="profile-info-widget">
                <a href="#" class="booking-doc-img">
                    <img src="@(ImageConstants.AVATARS+Model.Avatar)" alt="User Image">
                </a>
                <div class="profile-det-info">
                    <h3>@Model.FullName</h3>
                    <div class="patient-details">
                        <h5><i class="fas fa-birthday-cake"></i>@Model.DateOfBirth.ToString("dd-MM-yyyy") </h5>
                        <h5 class="mb-0"><i class="fas fa-map-marker-alt"></i>@Model.Address</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="dashboard-widget">
            <nav class="dashboard-menu">
                <ul>
                    <li>
                        <a asp-controller="Account" asp-action="Index">
                            <i class="fas fa-columns"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Appointment" asp-action="Index">
                            <i class="fas fa-calendar-check"></i>
                            <span>Appointments</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="HealthCheck" asp-action="HealthCheckList">
                            <i class="fas fa-file-medical-alt"></i>
                            <span>Health Check Details</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="ProfileSetting">
                            <i class="fas fa-user-cog"></i>
                            <span>Profile Settings</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="ChangePassword">
                            <i class="fas fa-lock"></i>
                            <span>Change Password</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </div>
<!-- /Profile Sidebar -->