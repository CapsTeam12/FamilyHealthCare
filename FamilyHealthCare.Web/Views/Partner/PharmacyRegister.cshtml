<script src=@Url.Content("~/assets/plugins/theia-sticky-sidebar/theia-sticky-sidebar.js")></script>

<!-- Select2 JS -->
<script src=@Url.Content("~/assets/plugins/select2/js/select2.min.js")></script>

<!-- Dropzone JS -->
<script src=@Url.Content("~/assets/plugins/dropzone/dropzone.min.js")></script>

<!-- Bootstrap Tagsinput JS -->
<script src=@Url.Content("~/assets/plugins/bootstrap-tagsinput/js/bootstrap-tagsinput.js")></script>

<!-- Profile Settings JS -->
<script src=@Url.Content("~/assets/js/profile-settings.js")></script>

<!-- Custom JS -->
<script src=@Url.Content("~/assets/js/script.js")></script>