@model ScheduleViewModel
@{
    ViewData["breadcrumb-title"] = "Schedule Timing";
    int count = 0;
    var currentDate = DateTime.Now.ToString("yyyy-MM-dd"); // get current Date
    var currentTime = Convert.ToDateTime(DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")); // get current DateTime
    var getDateSearch = ViewBag.CurrentDate;
    var userId = ViewBag.userId;

    int diff = (7 + (DateTime.Now.Date.DayOfWeek - DayOfWeek.Monday)) % 7;
    DateTime DateStartOfWeek = DateTime.Now.AddDays(-1 * diff).Date; //24/1
    DateTime DateEndOfWeek = DateStartOfWeek.AddDays(6); //30/1
    if (Convert.ToDateTime(currentDate).Date == DateEndOfWeek.Date) // 30 == 30
    {
        DateEndOfWeek = DateEndOfWeek.AddDays(7); //6/2
    }
}

<style>
    /*.error {
        font-weight: 700;
        display: block;
        color: #f00;
        font-size: 14px;
    }*/
    .errorMsq {
        color: red;
        display: block;
    }
</style>
<!-- Page Content -->
<div class="col-md-7 col-lg-8 col-xl-9">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Schedule Timings</h4>
                    <div class="float-end">
                        <i class="fas fa-square text-danger"> Timed out </i>
                        <i class="fas fa-square text-warning"> Booked </i>
                        <i class="fas fa-square text-info"> Scheduled </i>
                        <i class="fas fa-square text-success"> Create </i>
                        <i class="fas fa-square" style="color: #adb5bd"> Empty </i>
                    </div>
                </div>
                <div class="card-body">

                    <div class="profile-box">
                        <div id="qaErrorDiv" class="error" style="font-size: 12px; display:none;">
                            <label id="qaErrorLabel" class="validation-summary-errors"></label>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-12 avail-time">
                                <div class="mb-3">
                                    <div class="schedule-calendar-col justify-content-start">
                                        <form class="d-flex flex-wrap" method="get" asp-action="AvailableTimings">
                                            <span class="input-group-text">Date:</span>
                                            <div class="me-3">
                                                <input type="date" id="schedule_date" class="form-control" name="Date" value="@getDateSearch" min="@currentDate" max="@DateEndOfWeek.ToString("yyyy-MM-dd")" />
                                            </div>
                                            <div class="search-time-mobile">
                                                <input type="submit" name="submit" value="Search" class="btn btn-primary h-100">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <form id="scheduleDoctor" method="post" asp-action="CreateScheduleDoctor">
                                <input type="text" name="AccountId" value="@ViewBag.userId" hidden />
                                <input type="text" name="Date" value="@ViewBag.CurrentDate" hidden />
                                <div class="col-lg-12">
                                    <h3 class="h3 text-center book-btn2 mt-3 px-5 py-1 mx-3 rounded">1<sup>st</sup> Session </h3>
                                    <div class="text-center mt-3">
                                        <h4 class="h4 mb-2">Start Time </h4>
                                        <span class="h4 btn btn-outline-primary"><b> 07:00 AM</b></span>
                                    </div>
                                    <div class="token-slot mt-2">
                                        @foreach (var shifts in Model.Shifts)
                                        {
                                            count++;
                                            var shiftTimeslot = Convert.ToDateTime(getDateSearch + " " + shifts.TimeSlot.Split("-")[1]);
                                            if (DateTime.Compare(currentTime, shiftTimeslot) > 0)
                                            {
                                                <div class="form-check-inline visits me-0">
                                                    <label class="visit-btns">
                                                        <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id" disabled> @*Disable if currentTime greater than shiftTimeslot*@
                                                        <span class="visit-rsn" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                    </label>
                                                </div>
                                            }
                                            else if (Model.ScheduleDoctors.Any(x => x.ShiftId == shifts.Id && x.IsBooking == true))
                                            {
                                                <div class="form-check-inline visits me-0">
                                                    <label class="visit-btns">
                                                        <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id" disabled>  @*Change color when schedule booked*@
                                                        <span class="visit-rsn" style="background-color:gold" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                    </label>
                                                </div>
                                            }
                                            else if (Model.ScheduleDoctors.Any(x => x.ShiftId == shifts.Id))
                                            {
                                                <div class="form-check-inline visits me-0">
                                                    <label class="visit-btns">
                                                        <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id">  @*Change color when schedule created*@
                                                        <span class="visit-rsn" style="background-color:cyan" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                    </label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="form-check-inline visits me-0">
                                                    <label class="visit-btns">
                                                        <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id" required>
                                                        <span class="visit-rsn" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                    </label>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
<!-- /Page Content -->

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#scheduleDoctor").validate({
                rules: {
                    ShiftsId: {
                        required: true,
                    }
                },
                messages: {
                    ShiftsId: {
                        required: "Must choose at least 1!",
                    }
                },
                errorPlacement: function (error, element) {
                    alert(error.text());
                }
            });

        });
    </script>
} 