@model ScheduleViewModel
@{
    int count = 0;
    var currentDate = DateTime.Now.ToString("yyyy-MM-dd"); // get current Date
    var currentTime = Convert.ToDateTime(DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")); // get current DateTime
    var getDateSearch = ViewBag.CurrentDate;
    var userId = ViewBag.userId;
}
<!-- Breadcrumb -->
<div class="breadcrumb-bar">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-12 col-12">
                <nav aria-label="breadcrumb" class="page-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <li class="breadcrumb-item active" aria-current="page">Schedule Timings</li>
                    </ol>
                </nav>
                <h2 class="breadcrumb-title">Schedule Timings</h2>
            </div>
        </div>
    </div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">

                <!-- Profile Sidebar -->
                <div class="profile-sidebar">
                    <div class="widget-profile pro-widget-content">
                        <div class="profile-info-widget">
                            <a href="#" class="booking-doc-img">
                                <img src="~/assets/img/doctors/doctor-thumb-02.jpg" alt="User Image">
                            </a>
                            <div class="profile-det-info">
                                <h3>Dr. @User.Identity.Name</h3>

                                <div class="patient-details">
                                    <h5 class="mb-0">BDS, MDS - Oral & Maxillofacial Surgery</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="dashboard-widget">
                        <nav class="dashboard-menu">
                            <ul>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index">
                                        <i class="fas fa-columns"></i>
                                        <span>Dashboard</span>
                                    </a>
                                </li>
                                <li>

                                    <a asp-area="" asp-controller="MyPatient" asp-action="MyPatients">
                                        <i class="fas fa-user-injured"></i>
                                        <span>My Patients</span>
                                    </a>
                                </li>
                                <li class="active">
                                    <a asp-area="" asp-controller="Schedule" asp-action="AvailableTimings" asp-route-userId="@userId" asp-route-date="@DateTime.Now.ToString("yyyy-MM-dd")">
                                        <i class="fas fa-hourglass-start"></i>
                                        <span>Schedule Timings</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="MedicalRecords" asp-action="MedicalRecord">
                                        <i class="fas fa-file-invoice"></i>
                                        <span>Medical Records</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Prescriptions" asp-action="Prescription">
                                        <i class="fas fa-share-alt"></i>
                                        <span>Prescription</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Calendars" asp-action="Calendar">
                                        <i class="fas fa-calendar-check"></i>
                                        <span>Calendar</span>
                                    </a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="ProfileSettings" asp-action="ProfileSetting">
                                        <i class="fas fa-user-cog"></i>
                                        <span>Profile Settings</span>
                                    </a>
                                </li>

                            </ul>
                        </nav>
                    </div>
                </div>
                <!-- /Profile Sidebar -->

            </div>

            <div class="col-md-7 col-lg-8 col-xl-9">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Schedule Timings</h4>
                                <div class="profile-box">
                                    <div class="row">
                                        <div class="col-sm-6 col-12 avail-time">
                                            <div class="mb-3">
                                                <div class="schedule-calendar-col justify-content-start">
                                                    <form class="d-flex flex-wrap" method="get" asp-action="AvailableTimings">
                                                        <span class="input-group-text">Date:</span>
                                                        <div class="me-3">
                                                            <input type="text" name="userId" value="@ViewBag.userId" hidden />
                                                            <input type="date" id="schedule_date" class="form-control" name="Date" value="@getDateSearch" min="@currentDate" />
                                                        </div>
                                                        <div class="search-time-mobile">
                                                            <input type="submit" name="submit" value="Search" class="btn btn-primary h-100">
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <form method="post" asp-action="CreateScheduleDoctor">
                                            <input type="text" name="AccountId" value="@ViewBag.userId" hidden />
                                            <input type="text" name="Date" value="@ViewBag.CurrentDate" hidden />
                                            <div class="col-lg-12">
                                                <h3 class="h3 text-center book-btn2 mt-3 px-5 py-1 mx-3 rounded">1<sup>st</sup> Session </h3>
                                                <div class="text-center mt-3">
                                                    <h4 class="h4 mb-2">Start Time </h4>
                                                    <span class="h4 btn btn-outline-primary"><b> 07:00 AM</b></span>
                                                </div>
                                                <div class="token-slot mt-2">
                                                    @foreach (var shifts in Model.Shifts)
                                                    {
                                                        count++;
                                                        var shiftTimeslot = Convert.ToDateTime(getDateSearch + " " + shifts.TimeSlot.Split("-")[0]);
                                                        if (Model.ScheduleDoctors.Any(x => x.ShiftId == shifts.Id && x.IsBooking == true) || DateTime.Compare(currentTime, shiftTimeslot) > 0)
                                                        {
                                                            <div class="form-check-inline visits me-0">
                                                                <label class="visit-btns">
                                                                    <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id" disabled>
                                                                    <span class="visit-rsn" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                                </label>
                                                            </div>
                                                        }
                                                        else if (Model.ScheduleDoctors.Any(x => x.ShiftId == shifts.Id))
                                                        {
                                                            <div class="form-check-inline visits me-0">
                                                                <label class="visit-btns">
                                                                    <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id" checked disabled>
                                                                    <span class="visit-rsn" style="background-color:cyan" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                                </label>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="form-check-inline visits me-0">
                                                                <label class="visit-btns">
                                                                    <input type="checkbox" class="form-check-input" name="ShiftsId" value="@shifts.Id">
                                                                    <span class="visit-rsn" data-bs-toggle="tooltip" title="@shifts.TimeSlot.Split("-")[0].Substring(0, 5)">@shifts.TimeSlot.Split("-")[0].Substring(0, 5)</span>
                                                                </label>
                                                            </div>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <button class="btn btn-primary">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
<!-- /Page Content -->